---
import ContentWrapper from "../shared/ContentWrapper.astro";
import { Image } from "astro:assets";
---

<section>
  <ContentWrapper columnFlex gapResponsive>
    <div class="contact-wrapper">
      <div class="contact-info">

        <div class="contact-item">
          <Image
            src={"/icons/location-icon.svg"}
            width={60}
            height={60}
            alt={"Ikona"}
           />
          <p class="item-title">Lokalizacja</p>
          <p class="item-description">ul. Grójecka 97 lok. 700<br>02-120 Warszawa (Ochota)<br>pierwsze piętro, wejście obok kwiaciarni</p>
        </div>

        <div class="map-wrapper contact-item">
          <!-- TODO: zaimplementowac komponent na mape google -->
          <img src="/images/template-map.png" alt="temp map"> <!-- Usunac placeholder po implementacji -->
        </div>

      </div> 
      
    </div>
  </ContentWrapper>
</section>


<style>
  .contact-wrapper{
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-info {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 1.25rem;
    padding: 2rem;
  }
  .contact-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }
  .item-title, .item-description {
    text-align: center;
  }
  .item-title {
    font-weight: bold;
  }
  .map-wrapper img {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
  }


/* MEDIA QUERIES */
/* Large screens (1200px and below) */
@media only screen and (max-width: 1200px) {
  .contact-info{
    flex-wrap: wrap;
  }
  .flex-wrap {
    margin-top: 1.5rem;
    flex: 0 0 100%;
  }
}
/* Medium screens (768px and below) */
@media only screen and (max-width: 768px) {
  .contact-info{
    flex-direction: column;
    gap: 2rem;
  }
  .contact-item img {
    width: 48px;
    height: 48px;
  }
  .map-wrapper img {
    width: 100% !important;
    height: auto !important;
  }
}
/* Small screens (485px and below) */
@media only screen and (max-width: 485px) {
  
}
</style>