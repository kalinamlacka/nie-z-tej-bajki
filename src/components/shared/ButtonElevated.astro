---
import { Image } from "astro:assets";

interface Props {
  href: string;
  text: string;
  iconReversed?: boolean;
}

const { text, href, iconReversed = false } = Astro.props;
---
<a href={href}>
  <div class={`button-wrapper${iconReversed ? ' reversed' : ''}`}>
    <p>{text}</p>
    <div class={`icon-wrapper${iconReversed ? ' icon-reversed' : ''}`}>
    <Image
      src={"/icons/chevron.svg"}
      width={20}
      height={20}
      alt={"Icon"}
    />
    </div>
  </div>
</a>

<style>
  a { 
    width: min-content;
  }
  .button-wrapper{
    display: flex;
    align-items: center;
    background-color: var(--primary-color);
    padding: .75rem 1.25rem;
    gap: 1rem;
    border-radius: 999px;
    width: min-content;
    white-space: nowrap;
    cursor: pointer;
    -webkit-box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, .25);
    -moz-box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, .25);
    box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, .25);
  } 
  .reversed {
    flex-direction: row-reverse;
  }
  .button-wrapper p {
    font-family: 'Barlow-Regular';
    color: #ffffff;
    font-weight: bold;
    font-size: .875rem;
    padding-bottom: 1px;
  }
  .icon-wrapper {
    margin-top: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }
  .icon-reversed {
    transform: rotate(180deg);
  }
  /* Large screens (1200px and below) */
  @media only screen and (max-width: 1200px) {
    .button-wrapper p{
      font-size: .875rem;
    }
    .icon-wrapper, .icon-wrapper img {
    width: 16px;
    height: 16px;
  }
  .button-wrapper {
    padding: .75rem 1rem;
  }
  }
/* Medium screens (768px and below) */
@media only screen and (max-width: 768px) {
  .button-wrapper {
    gap: .75rem;
    padding: .5rem 1rem .65rem;
  }
  .button-wrapper p {
    font-size: .75rem;
    margin-bottom: 1px;
  }
}
/* Small screens (485px and below) */
@media only screen and (max-width: 485px) {
  .button-wrapper p {
    font-size: .675rem;
    margin-bottom: unset;
  }
}



</style>