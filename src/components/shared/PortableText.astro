---
import { PortableText as PortableTextRenderer } from 'astro-portabletext';
import type { PortableTextBlock } from '@portabletext/types';
import SanityImage from './SanityImage.astro';

interface Props {
  value: PortableTextBlock[];
  class?: string;
}

const { value, class: className = '' } = Astro.props;

// Komponenty custom typów
const components = {
  type: {
    customImage: SanityImage,
  },
};
---

<div class={`portable-text ${className}`}>
  <PortableTextRenderer value={value} components={components} />
</div>

<style is:global>
  /* Nagłówki */
  .portable-text h1 {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 1.5rem 0;
    line-height: 1.2;
  }

  .portable-text h2 {
    font-size: 1.875rem;
    font-weight: 700;
    margin: 1.25rem 0;
    line-height: 1.3;
  }

  .portable-text h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 1rem 0;
    line-height: 1.4;
  }

  .portable-text h4 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0.875rem 0;
    line-height: 1.4;
  }

  /* Paragrafy */
  .portable-text p {
    margin: 1rem 0;
    line-height: 1.75;
    color: #333;
  }

  /* Listy */
  .portable-text ul {
    list-style-type: disc;
    list-style-position: outside;
    margin: 1rem 0;
    padding-left: 2.5rem;
  }

  .portable-text ol {
    list-style-type: decimal;
    list-style-position: outside;
    margin: 1rem 0;
    padding-left: 2.5rem;
  }

  .portable-text li {
    display: list-item;
    margin: 0.5rem 0;
    line-height: 1.75;
    padding-left: 0.5rem;
  }

  .portable-text ul li::marker {
    color: #333;
  }

  .portable-text ol li::marker {
    color: #333;
    font-weight: 600;
  }

  /* Cytaty */
  .portable-text blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }

  /* Formatowanie inline */
  .portable-text strong {
    font-weight: 700;
  }

  .portable-text em {
    font-style: italic;
  }

  .portable-text code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: 'Courier New', Courier, monospace;
  }

  .portable-text u {
    text-decoration: underline;
  }

  .portable-text s {
    text-decoration: line-through;
  }

  /* Linki */
  .portable-text a {
    color: #0066cc;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .portable-text a:hover {
    color: #0052a3;
  }

  /* Obrazy */
  .portable-text img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
    border-radius: 0.5rem;
  }
</style>
