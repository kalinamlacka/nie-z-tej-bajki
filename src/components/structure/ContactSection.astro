---
import ContentWrapper from "../shared/ContentWrapper.astro";
import { Image } from "astro:assets";

const GOOGLE_MAPS_API_KEY = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;

const locationConfig = {
  lat: 52.2089353,
  lng: 20.9754475,
  zoom: 17,
  title: "Nie z Tej Bajki - ul. Grójecka 97 lok. 700"
};
---


<section>
  <ContentWrapper columnFlex gapResponsive>
    <h2>Kontakt i lokalizacja</h2>
    <div class="contact-info-wrapper">

      <div class="location-map-wrapper">
        <div
          id="google-map-contact"
          data-lat={locationConfig.lat}
          data-lng={locationConfig.lng}
          data-zoom={locationConfig.zoom}
          data-title={locationConfig.title}
        ></div>
      </div>

      <div class="info-wrapper">
        <div class="info-item">

          <div class="icon-wrapper">
            <Image
            src={"/icons/pin-icon.svg"}
            width={40}
            height={40}
            alt={"Ikona"}
           />
          </div>

          <div class="paragraphs">
            <p>ul. Grójecka 97 lok. 700 </p>
            <p>02-120 Warszawa (Ochota)</p>
            <p>pierwsze piętro, wejście obok kwiaciarni</p>
          </div>

        </div>

        <div class="info-item">

          <div class="icon-wrapper">
            <Image
            src={"/icons/phone2-icon.svg"}
            width={40}
            height={40}
            alt={"Ikona"}
           />
          </div>

          <p>(+48) 604 872 709</p>

        </div>

        <div class="info-item">

          <div class="icon-wrapper">
            <Image
            src={"/icons/mail-icon.svg"}
            width={40}
            height={40}
            alt={"Ikona"}
           />
          </div>

          <p>szkolanieztejbajki@gmail.com</p>

        </div>
      </div>

    </div>
  </ContentWrapper>
</section>

<script define:vars={{ GOOGLE_MAPS_API_KEY }}>
  function initContactMap() {
    const mapContainer = document.getElementById('google-map-contact');
    if (!mapContainer) return;

    const lat = parseFloat(mapContainer.dataset.lat);
    const lng = parseFloat(mapContainer.dataset.lng);
    const zoom = parseInt(mapContainer.dataset.zoom);
    const title = mapContainer.dataset.title;

    const location = { lat, lng };

    const map = new google.maps.Map(mapContainer, {
      center: location,
      zoom: zoom,
      mapTypeControl: false,
      streetViewControl: false,
      fullscreenControl: true,
    });

    const marker = new google.maps.Marker({
      position: location,
      map: map,
      title: title,
    });

    const infoWindow = new google.maps.InfoWindow({
      content: `
        <div style="padding: 8px; max-width: 250px;">
          <h3 style="margin: 0 0 8px 0; font-size: 14px; font-weight: bold;">Nie z Tej Bajki</h3>
          <p style="margin: 0; font-size: 13px; line-height: 1.4;">
            ul. Grójecka 97 lok. 700<br>
            02-120 Warszawa (Ochota)<br>
            <span style="color: #666;">pierwsze piętro, wejście obok kwiaciarni</span>
          </p>
          <a href="https://www.google.com/maps/dir/?api=1&destination=Niepubliczna+szkoła+specjalna+Nie+z+tej+bajki+Grójecka+97+Warszawa"
             target="_blank"
             rel="noopener noreferrer"
             style="display: inline-block; margin-top: 10px; color: #1a73e8; text-decoration: none; font-size: 13px;">
            Wyznacz trasę →
          </a>
        </div>
      `,
    });

    marker.addListener('click', () => {
      infoWindow.open(map, marker);
    });
  }

  // Load Google Maps API
  if (!window.google?.maps) {
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key=${GOOGLE_MAPS_API_KEY}&callback=initGoogleMapContact`;
    script.async = true;
    script.defer = true;
    document.head.appendChild(script);

    window.initGoogleMapContact = initContactMap;
  } else {
    initContactMap();
  }
</script>

<style>
.contact-info-wrapper {
  display: flex;
  align-items: center;
  gap: 3rem;
  border-radius: 1.25rem;
  padding: 2.5rem;
  background-color: #ffffff;
}


.location-map-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 6;
  border: 10px solid var(--primary-color-light);
  border-radius: 1.25rem;
  overflow: hidden;
  max-height: 400px;
}

#google-map-contact {
  width: 100%;
  height: 350px;
}

.info-wrapper {
  display: flex;
  flex: 5;
  flex-direction: column;
  gap: 2rem;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 1rem;
}

/* MEDIA QUERIES */
/* Large screens (1200px and below) */
@media only screen and (max-width: 1200px) {
  .location-map-wrapper, .info-wrapper {
    flex: 1;
  }
  .contact-info-wrapper {
    gap: 2rem;
    padding: 2rem;
  }
  .icon-wrapper, .icon-wrapper img {
    width: 28px;
    height: 28px;
  }
  .location-map-wrapper {
    max-height: 350px;
  }
  .info-wrapper {
    gap: 1rem;
  }
}
/* Medium screens (768px and below) */
@media only screen and (max-width: 768px) {
  .contact-info-wrapper {
    flex-direction: column-reverse;
    padding: 1.5rem;
  }
  #google-map-contact {
    height: 280px;
  }
  .location-map-wrapper {
    width: 100%;
  }
}
/* Small screens (485px and below) */
@media only screen and (max-width: 485px) {
  .location-map-wrapper {
    border-width: 4px;
  }
  .contact-info-wrapper {
    padding: 1rem;
  }
}
</style>