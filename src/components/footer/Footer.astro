<style>

  .content-wrapper {
    display: flex;
    max-width: var(--section-max-width);
    margin: 0 auto;
    border-top: 1px solid var(--separator-color);
    padding: 4rem;
    gap: 3rem;
  }
  .content-wrapper > div {
    flex: 1;
  }
  .logo-wrapper {
    flex: 4 !important;
  }
  .logo-wrapper img {
    width: 100%;
    height: 100%;
  }
  .links-wrapper {
    display: flex;
    flex-direction: column;
  }
  .links-wrapper p {
    font-size: 1.75rem;
    color: var(--text-color-title);
    font-weight: bold;
    border-top: 1px solid var(--text-color-title);
    padding: .75rem 0;
  }
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .contact-item{
    display: flex;
    align-items: center;
    gap: .5rem;
  }
  .contact-item p {
    font-size: 1rem;
  }
  .icon-wrapper {
    width: 24px;
    height: 24px;
  }

  .mobile {
    display: none;
  }
  .mobile img {
    width: 100%;
    height: auto;
  }

  .media-link {
    position: absolute;
    bottom: 3rem;
    right: 2rem;
  }

@media only screen and (max-width: 1200px) {
    .links-wrapper p {
      font-size: 1.25rem;
    }
}
     

  /* Medium screens (768px and below) */
  @media only screen and (max-width: 768px) {
    .content-wrapper {
      background-color: #ffffff;
      position: relative;
      flex-direction: column;
      gap: 2rem;
      padding: calc(0.75* var(--section-padding-vertical)) calc(0.75* var(--section-padding-horizontal));
    }
    .mobile {
      display: flex;
    }
    .regular {
      display: none;
    }
    .links-wrapper p {
      width: 150px;
    }

  }
  /* Small screens (485px and below) */
@media only screen and (max-width: 485px) {
  .content-wrapper {
      padding: calc(0.5* var(--section-padding-vertical)) calc(0.25* var(--section-padding-horizontal));
    }
    .media-link {
    bottom: 2rem;
    right: 1rem;
  }
}
</style>
